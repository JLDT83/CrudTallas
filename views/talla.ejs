<%- include layouts/header.ejs %>
    <div class="container">
    <div class = "container">
        <a href="/create" class= "btn btn-outline-primary mt-14"> <box-icon name='plus-square' type='solid' ></box-icon></a>
    </div>
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Rank</th>
      <th scope="col">Pais</th>
      <th scope="col">Hombre (cm)</th>
      <th scope="col">Mujer (cm)</th>
      <th scope="col">Hombre (pies)</th>
      <th scope="col">Mujer(pies)</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i=0; i<Tallas.length; i++) { %>
    <tr>
      <th scope="row"><%=Tallas[i].id %></th>
      <td><%=Tallas[i].Country %></td>
      <td><%=Tallas[i].MaleHeight %></td>
      <td><%=Tallas[i].FemaleHeight %></td>
      <td><%=Tallas[i].MaleHeightInch %></td>
      <td><%=Tallas[i].FemaleHeightInch %></td>
      <td> 
      <a href="/edit/<%=Tallas[i].id %>" ><box-icon type='solid' name='edit'></box-icon></a>  
      <a href="/delete/<%=Tallas[i].id %>" onclick="return confirm('Desea eliminar?') " ><box-icon type='solid' name='checkbox-minus'></box-icon></a>  
      </td>
    </tr>
    <% }%> 
  </tbody>
</table>
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        
</div>
    
